# Exports ─────────────────────────────────────────────────────────────────────────────────────────
export PATH="$HOME/.local/bin:$HOME/.local/share/knvim/mason/bin:$PATH"
export LD_LIBRARY_PATH="$HOME/.local/lib:$LD_LIBRARY_PATH"
export PYENV_ROOT="$HOME/.venvs"

export EDITOR="nvim"
export VISUAL="nvim"
export PYTHONBREAKPOINT="ipdb.set_trace"
export GIT_SSH_COMMAND="/usr/bin/ssh"
export NVIM_APPNAME="knvim"
export MANROFFOPT="-c"
# export TERM="wezterm"

# Change colors for ls on MacOS
# export LS_COLORS="$LSCOLORS"


# Aliases ─────────────────────────────────────────────────────────────────────────────────────────
alias l="ll -a"
alias vi="NVIM_APPNAME=knvim.mini nvim"
if type xclip &> /dev/null; then
    alias pbcopy='xclip -selection clipboard'
    alias pbpaste='xclip -selection clipboard -o'
elif type xsel &> /dev/null; then
    alias pbcopy='xsel --clipboard --input'
    alias pbpaste='xsel --clipboard --output'
fi
DOTFILES_DIR="$HOME/.dotfiles"
alias dotfiles="git --git-dir=$DOTFILES_DIR/.git --work-tree=$DOTFILES_DIR"


