# Terminal
super + Return
    kitty
super + shift + Return
    kitty --directory "$(cat /tmp/whereami_$USER)"

# File explorer
super + e
    thunar
super + shift + e
    thunar "$(cat /tmp/whereami_$USER)"

# Settings
super + s
    stacer

# Calculator (qalculate)
super + c
    qalculate

# Web browser
super + w
    google-chrome

# Email client
super + m
    evolution --force-online

# Random wallpaper
super + p
    nitrogen --set-zoom-fill --random "$HOME/Pictures/my_wallpapers" --save

# Rofi menu
super + space
    "$HOME/.config/rofi/scripts/launch_rofi_drun.sh"
super + shift + space
    "$HOME/.config/rofi/scripts/launch_rofi_run.sh"
super + Tab
    "$HOME/.config/rofi/scripts/launch_rofi_window.sh"

# Systemtray
super + t
    "$HOME/.config/trayer/trayer_toggle.sh"

# Power menu
super + Escape
    "$HOME/.config/rofi/scripts/powermenu.sh"

# Screenshot
Print
    sleep 0.2; \
    maim -u "$HOME/Pictures/$(date +%Y-%m-%d_%H-%M-%S).png"
    #scrot
shift + Print
    sleep 0.2; \
    maim -s -u "$HOME/Pictures/$(date +%Y-%m-%d_%H-%M-%S).png"
    #scrot --select --freeze
ctrl + Print
    sleep 0.2; \
    maim -u | xclip -selection clipboard -t image/png -i
    #scrot '/tmp/%F_%T_$wx$h.png' --exec 'xclip -selection clipboard -target image/png -i $f'
ctrl + shift + Print
    sleep 0.2; \
    maim -s -u | xclip -selection clipboard -t image/png -i
    #scrot --select --freeze '/tmp/%F_%T_$wx$h.png' --exec 'xclip -selection clipboard -target image/png -i $f'

# Backlight control
XF86MonBrightnessUp
    xbacklight -inc 10
XF86MonBrightnessDown
    xbacklight -dec 10

# Volume control
XF86AudioRaiseVolume
    amixer -q -D pulse sset Master 10%+
XF86AudioLowerVolume
    amixer -q -D pulse sset Master 10%-
XF86AudioMute
    amixer -q -D pulse sset Master toggle
