# Terminal
super + Return
    kitty

# File explorer
super + e
    thunar

# Settings (Gnome control center)
super + s
    gnome-control-center

# Calculator (qalculate)
super + c
    qalculate

# Web browser
super + w
    firefox

# Email client
super + m
    thunderbird

# Random wallpaper
super + p
    nitrogen --set-zoom-fill --random "$HOME/Pictures/my_wallpapers" --save

# Rofi menu
super + space
    "$HOME/.config/rofi/scripts/launch_rofi_drun.sh"
super + shift + space
    "$HOME/.config/rofi/scripts/launch_rofi_run.sh"
super + Tab
    "$HOME/.config/rofi/scripts/launch_rofi_window.sh"

# Systemtray
super + t
    "$HOME/.config/trayer/trayer_toggle.sh"

# Power menu
super + Escape
    "$HOME/.config/rofi/scripts/powermenu.sh"

# Show key bindings
super + F1
    "$HOME/.config/rofi/scripts/find_keybindings.sh"

# I3 instant layout
super + shift + BackSpace
    "$HOME/.config/rofi/scripts/i3-instant-layout.sh"

# Screenshot
Print
    sleep 0.2; \
    scrot
shift + Print
    sleep 0.2; \
    scrot --select --freeze
ctrl + Print
    sleep 0.2; \
    scrot '/tmp/%F_%T_$wx$h.png' --exec 'xclip -selection clipboard -target image/png -i $f'
ctrl + shift + Print
    sleep 0.2; \
    scrot --select --freeze '/tmp/%F_%T_$wx$h.png' --exec 'xclip -selection clipboard -target image/png -i $f'

# Backlight control
XF86MonBrightnessUp
    xbacklight -inc 10
XF86MonBrightnessDown
    xbacklight -dec 10

# Volume control
XF86AudioRaiseVolume
    amixer -q -D pulse sset Master 10%+
XF86AudioLowerVolume
    amixer -q -D pulse sset Master 10%-
XF86AudioMute
    amixer -q -D pulse sset Master toggle
