# Compositor
exec_always picom --experimental-backends

# Simple X hotkey deamon
exec_always --no-startup-id sxhkd

# Monitor settings
exec_always "$HOME/.screenlayout/default.sh"

# Wallpaper settings
exec_always nitrogen --restore

# Autolock the screen. Place mouse at the bottom right to avoid autolock
exec_always xautolock -time 30 -corners 000- -locker "$HOME/.config/i3/scripts/i3lock.sh"

# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
# screen before suspend. Use loginctl lock-session to lock your screen.
exec_always --no-startup-id xss-lock --transfer-sleep-lock -- "$HOME/.config/i3/scripts/transfer-sleep-lock-generic-delay.sh"

# Polybar
exec_always --no-startup-id "$HOME/.config/polybar/launch.sh"

# Auto switch horizontal/vertical tiling
# Ref: https://github.com/chmln/i3-auto-layout
#exec_always --no-startup-id "$HOME/.config/i3/scripts/i3-auto-layout"

# NetworkManager is the most popular way to manage wireless networks on Linux,
# and nm-applet is a desktop environment-independent system tray GUI for it.
exec_always --no-startup-id "nm-applet"

# Bluetooth manager
exec_always --no-startup-id "blueman-applet"

# Dropbox
exec_always "sleep 10; dropbox start"


